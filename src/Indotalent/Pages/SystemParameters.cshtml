<!-- /HEADER -->

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="system-params-container">
                    <h3>System parameters</h3>

                    <!-- Step 2 form -->
                    <form method="post">

                        <!-- Type of meter (radio buttons) -->
                        <div class="form-group mb-4">
                            <label>Type of meter</label><br />
                            <div class="form-check">
                                <input asp-for="TypeOfMeter" class="form-check-input" type="radio"
                                       value="SinglePhase" id="radioSingle" />
                                <label class="form-check-label" for="radioSingle">Single phase</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="TypeOfMeter" class="form-check-input" type="radio"
                                       value="ThreePhase" id="radioThree" />
                                <label class="form-check-label" for="radioThree">Three phase</label>
                            </div>
                        </div>

                        <!-- Meter power (kW) -->
                        <div class="form-group mb-4">
                            <label asp-for="MeterPower">Meter power</label>
                            <input asp-for="MeterPower" class="form-control" placeholder="Meter power [kW]" />
                        </div>

                        <!-- Next button -->
                        <button type="submit" class="btn-next">Next</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

