@page
@model Indotalent.Pages.AddChargingStationModel

<!-- Slick CSS -->
<link rel="stylesheet" href="~/css/slick.css" />
<link rel="stylesheet" href="~/css/slick-theme.css" />

<!-- style.css -->
<link rel="stylesheet" href="~/css/style.css" />

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    .charger-identification-container {
        max-width: 700px;
        margin: 40px auto;
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 30px;
    }

    .btn-next {
        background-color: #0052cc;
        color: #fff;
        border-radius: 30px;
        width: 100%;
        height: 50px;
        font-size: 1.1rem;
        font-weight: 500;
        border: none;
        margin-top: 20px;
    }

        .btn-next:hover {
            background-color: #0041a3;
        }

    .btn-back {
        background-color: #aaa;
        color: #fff;
        border-radius: 30px;
        width: 100px;
        height: 40px;
        font-size: 0.9rem;
        font-weight: 500;
        border: none;
        margin-bottom: 10px;
        cursor: pointer;
    }

        .btn-back:hover {
            background-color: #888;
        }
</style>

<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="charger-identification-container">
                    <!-- "Back" button to go to station list -->
                    <button class="btn-back"
                            onclick="window.location.href='@Url.Page("ChargingStationList")'">
                        Back
                    </button>

                    <h3>Create Charging Station</h3>

                    <form method="post">
                        <!-- Charger Name -->
                        <div class="form-group mb-3">
                            <label asp-for="ChargerName">Charging station name</label>
                            <input asp-for="ChargerName" class="form-control"
                                   placeholder="Enter charging station name" required />
                        </div>

                        <!-- Serial -->
                        <div class="form-group mb-3">
                            <label asp-for="SerialNumber">Serial number</label>
                            <input asp-for="SerialNumber" class="form-control"
                                   placeholder="Serial number" required />
                        </div>

                        <!-- Puk -->
                        <div class="form-group mb-3">
                            <label asp-for="Puk">PUK</label>
                            <input asp-for="Puk" class="form-control"
                                   placeholder="PUK" required />
                        </div>

                        <!-- Power (kW) -->
                        <div class="form-group mb-3">
                            <label asp-for="PowerValue">Power (kW)</label>
                            <input asp-for="PowerValue" class="form-control"
                                   placeholder="e.g. 22" />
                            <small class="text-muted">
                                Enter only the number (e.g. "22"). We'll append " kW".
                                If left blank, we'll store "0 kW".
                            </small>
                        </div>

                        <button type="submit" class="btn-next">Next</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("__Vendor")

<!-- Scripts -->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<script src="~/landingpage/js/slick.min.js"></script>
