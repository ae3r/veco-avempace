@page
@model Indotalent.Pages.AllChargersModel

<!-- CSS references (same as Networks page) -->
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/slick.css" />
<link rel="stylesheet" href="~/css/slick-theme.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    /* Main content area (offset below fixed navbar from layout) */
    .main-content {
        margin-top: 160px; /* Adjust if your navbar height is different */
        padding: 20px;
    }

    /* Container for the grid list (card-like container) */
    .my-chargers-container {
        background-color: #fff;
        border: 2px solid #0b7fab; /* Brand color */
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    /* Table styling */
    .my-chargers-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 6px;
        overflow: hidden;
    }

        .my-chargers-table thead {
            background-color: #0b7fab; /* Brand color header */
        }

            .my-chargers-table thead th {
                color: #fff;
                font-weight: 600;
                padding: 12px;
                border-bottom: 2px solid #0b7fab;
                text-align: left;
            }

        .my-chargers-table tbody td {
            padding: 12px;
            border-bottom: 1px solid #eee;
        }

        .my-chargers-table tbody tr:hover {
            background-color: #f0f8fa;
        }

    /* Unified button styling */
    .primary-btn {
        background-color: #0b7fab;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .primary-btn:hover {
            background-color: #095f79;
        }

    /* Top bar (items per page + filter) */
    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

        .top-bar .items-per-page select {
            border: 1px solid #ddd;
            padding: 5px 8px;
            border-radius: 4px;
        }

    /* Heading (All Chargers) + Create Charger button */
    .chargers-heading {
        margin: 20px 0 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    /* Pagination styles */
    .pagination-container {
        margin-top: 15px;
        display: flex;
        gap: 10px;
    }

    .page-btn {
        background-color: #0b7fab;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
    }

        .page-btn:hover {
            background-color: #095f79;
        }
</style>

<body>
    <div class="main-content">
        <!-- TOP BAR: Items per page and Filter -->
        <div class="top-bar">
            <div class="items-per-page">
                <label>Items per page</label>
                <select>
                    <option>5</option>
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                </select>
            </div>
            <button class="primary-btn">Filter</button>
        </div>

        <!-- Heading & Create Charger button -->
        <div class="chargers-heading">
            <h3 style="margin: 0;">All Chargers</h3>
            <!-- Redirect via GET to CreateCharger page -->
            <form method="get" asp-page="/CreateCharger">
                <button type="submit" class="primary-btn">Create Charger</button>
            </form>
        </div>

        <!-- Grid container for the chargers table -->
        <div class="my-chargers-container">
            <table class="my-chargers-table">
                <thead>
                    <tr>
                        <th>Charger Name</th>
                        <th>Network Name</th>
                        <th>Charger Status</th>
                        <th>Connection Status</th>
                        <th>Model</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Chargers != null && Model.Chargers.Any())
                    {
                        foreach (var charger in Model.Chargers)
                        {
                            <tr>
                                <td>@charger.ChargerName</td>
                                <td>@charger.Network?.NetworkName</td>
                                <td>@charger.ChargerStatus</td>
                                <td>@charger.ConnectionStatus</td>
                                <td>@charger.Model</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5">No chargers found.</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Pagination (placeholder) -->
            <div class="pagination-container">
                <button class="page-btn">Prev</button>
                <button class="page-btn">1</button>
                <button class="page-btn">Next</button>
            </div>
        </div>
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/landingpage/js/slick.min.js"></script>
</body>
</html>
