@page "{chargerId:int}"
@model Indotalent.Pages.ChargerDetailsModel
@{
    ViewData["Title"] = "Charger Details";
}

<!-- CSS references (reusing your common styles) -->
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/slick.css" />
<link rel="stylesheet" href="~/css/slick-theme.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    .main-content {
        margin-top: 160px; /* same offset as your other pages */
        padding: 20px;
    }

    .panel-container {
        background-color: #fff;
        border: 2px solid #0b7fab;
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .heading-bar {
        margin-bottom: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .charger-image {
        max-width: 100%;
        border-radius: 4px;
    }

    .detail-item {
        margin-bottom: 10px;
        font-size: 1rem;
        color: #333;
    }

        .detail-item strong {
            font-weight: 600;
        }
</style>

<body>
    <div class="main-content">
        <!-- Heading and Back Link -->
        <div class="heading-bar">
            <h2>@Model.Charger?.ChargerName</h2>
            <a asp-page="/NetworkPanel" asp-route-networkId="@Model.Charger?.NetworkId" class="btn btn-primary">Back to Network Panel</a>
        </div>

        <!-- Panel Container -->
        <div class="panel-container">
            <div class="row">
                <div class="col-md-4">
                    <!-- Charger Image -->
                    <img src="@(string.IsNullOrEmpty(Model.Charger?.PhotoUrl)
                        ? Url.Content("~/img/autel.jpg")
                        : Model.Charger.PhotoUrl)"
                         alt="Charger Image" class="charger-image" />
                </div>
                <div class="col-md-8">
                    <p class="detail-item"><strong>Status:</strong> @Model.Charger?.ChargerStatus ?? "N/A"</p>
                    <p class="detail-item"><strong>Connection:</strong> @Model.Charger?.ConnectionStatus ?? "N/A"</p>
                    <p class="detail-item"><strong>Model:</strong> @Model.Charger?.Model ?? "N/A"</p>
                    <p class="detail-item"><strong>Power:</strong> @Model.Charger?.PowerValue kW</p>
                    <p class="detail-item"><strong>Serial Number:</strong> @Model.Charger?.SerialNumber ?? "N/A"</p>
                    <p class="detail-item"><strong>PUK:</strong> @Model.Charger?.Puk ?? "N/A"</p>

                    <!-- Custom fields (if available) -->
                    <p class="detail-item"><strong>Vehicle:</strong> @Model.Charger?.Vehicle ?? "N/A"</p>
                    <p class="detail-item"><strong>Access:</strong> @Model.Charger?.Access ?? "N/A"</p>
                    <p class="detail-item"><strong>Self Consumption:</strong> @Model.Charger?.SelfConsumption ?? "N/A"</p>
                    <p class="detail-item"><strong>Internet:</strong> @Model.Charger?.Internet ?? "N/A"</p>
                    <p class="detail-item"><strong>Scheduling:</strong> @Model.Charger?.Scheduling ?? "N/A"</p>
                    <p class="detail-item"><strong>Meter Nominal Power:</strong> @Model.Charger?.MeterNominalPower ?? "N/A"</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
