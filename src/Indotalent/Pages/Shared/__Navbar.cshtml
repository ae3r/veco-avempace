            <span class="fa fa-bars"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto py-0">
                
                <a asp-area="" asp-page="/Produits" class="nav-item nav-link @(currentCshtmlName.Equals("Produits") ? "active" : "")">Nos Produits</a>
