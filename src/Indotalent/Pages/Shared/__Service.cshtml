    .maison-btn {
        width: 800px;
        height: 140px;
        border: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        color: #333;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .maison-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

    .maison-icon {
        font-size: 40px;
        color: #00aaff;
    }

    .maison-text {
        font-weight: bold;
        margin-top: 10px;
    }

    /* Appartement Button */
    .appartement-btn {
        width: 800px;
        height: 140px;
        border: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        color: #333;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .appartement-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

    .appartement-icon {
        font-size: 40px;
        color: #00aaff;
    }

    .appartement-text {
        font-weight: bold;
        margin-top: 10px;
    }

    /* Entreprise Button */
    .entreprise-btn {
        width: 800px;
        height: 140px;
        border: 1px solid #ddd;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        font-size: 18px;
        color: #333;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .entreprise-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
        }

    .entreprise-icon {
        font-size: 40px;
        color: #00aaff;
    }

    .entreprise-text {
        font-weight: bold;
        margin-top: 10px;
    }

    /* Slider */
    .slider-container .slider {
        width: 60%;
    }

    .slider-labels {
        display: flex;
        justify-content: space-between;
        width: 60%;
        margin: 0 auto;
        font-weight: bold;
        font-size: 14px;
    }

    .slider-output {
        font-weight: bold;
        font-size: 18px;
        color: #333;
    }

    /* Recommendation Buttons */
    .choice-button {
        width: 250px;
        text-align: center;
        font-size: 16px;
        padding: 10px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin: 5px 0;
        transition: all 0.3s ease;
    }

        .choice-button:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.15);
        }

    /* Final Step Box */
    .final-box {
        background-color: #007bff;
        color: white;
        padding: 20px;
        border-radius: 8px;
        font-size: 18px;
        font-weight: bold;
        display: inline-block;
        margin-top: 20px;
    }
</style>

<!-- JavaScript -->
<script>
    let selectedDistance = 0;

    function showStep2() {
        document.getElementById("step2Content").style.display = "block";

        // Reset slider to placeholder
        const slider = document.getElementById("distanceSlider");
        slider.value = 0;
        updateSliderLabel(0);
    }

    function updateSliderLabel(value) {
        selectedDistance = value;
        const output = document.getElementById("sliderOutput");

        // Placeholder
        if (value == 0) {
            output.innerText = ""; // Empty for placeholder
        } else if (value == 1) {
            output.innerText = "- 10m";
        } else if (value == 2) {
            output.innerText = "10m < d < 20m";
        } else if (value == 3) {
            output.innerText = "+ 20m";
        }
    }

    function displayRecommendation(value) {
        // Only display recommendations if the user selects a valid distance
        if (value > 0) {
            document.getElementById("recommendation").style.display = "block";
        } else {
            document.getElementById("recommendation").style.display = "none";
        }
    }

    function handleChoice(choice) {
        const offerText = document.getElementById("offerText");
        const finalStepBox = document.getElementById("finalStepBox");
        const finalStepText = document.getElementById("finalStepText");

        if (choice === "yes" && selectedDistance > 0) {
            offerText.style.display = "block";
        } else {
            offerText.style.display = "none";
        }

        if (selectedDistance == 1) {
            finalStepText.innerText = "Votre projet à partir de 7499 MAD";
        } else if (selectedDistance == 2) {
            finalStepText.innerText = "Votre projet à partir de 7999 MAD";
        } else if (selectedDistance == 3) {
            finalStepText.innerText = "Votre projet à partir de 8499 MAD";
        }
        finalStepBox.style.display = "block";
    }

    function goBack() {
        document.getElementById("step2Content").style.display = "none";
    }
</script>
