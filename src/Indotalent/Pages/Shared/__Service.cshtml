<div class="container-fluid py-5">
    <div class="container py-5">
        <!-- Section Title -->
        <div class="section-title text-center position-relative pb-3 mb-5 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-primary text-uppercase">Faites-nous confiance !</h5>
            <h1 class="mb-0">Rejoignez la révolution électrique avec VECO Avempace</h1>
        </div>

        <!-- Maison Button -->
        <div class="text-center mb-5">
            <button id="maisonButton" class="btn btn-light text-center shadow-lg rounded maison-btn" onclick="showStep2()">
                <div class="maison-icon">
                    <i class="bi bi-house-door-fill"></i> <!-- House icon -->
                </div>
                <div class="maison-text">Maison</div>
            </button>
        </div>

        <div class="text-center mb-5">
            <button id="appartementButton" class="btn btn-light text-center shadow-lg rounded appartement-btn">
                <div class="appartement-icon">
                    <i class="bi bi-building"></i> <!-- Appartement icon -->
                </div>
                <div class="appartement-text">Appartement</div>
            </button>
        </div>

        <div class="text-center mb-5">
            <button id="entrepriseButton" class="btn btn-light text-center shadow-lg rounded entreprise-btn">
                <div class="entreprise-icon">
                    <i class="bi bi-building"></i> <!-- Entreprise icon -->
                </div>
                <div class="entreprise-text">Entreprise</div>
            </button>
        </div>

        <!-- Step 2 Section -->
        <div id="step2Content" style="display: none; margin-top: 20px;">
            <h4 class="text-center">La distance entre le tableau électrique et le point de charge sera de (en mètres)...</h4>
            <div class="slider-container text-center mt-4">
                <!-- Slider -->
                <input type="range"
                       id="distanceSlider"
                       min="0"
                       max="3"
                       value="0"
                       step="1"
                       class="slider"
                       oninput="updateSliderLabel(this.value)"
                       onchange="displayRecommendation(this.value)" />
                <!-- Labels -->
                <div class="slider-labels">
                    <span></span> <!-- Placeholder -->
                    <span>- 10m</span>
                    <span>10m &lt; d &lt; 20m</span>
                    <span>+ 20m</span>
                </div>
                <!-- Output -->
                <div id="sliderOutput" class="slider-output mt-3"></div>
            </div>

            <!-- Recommendation Section -->
            <div id="recommendation" style="display: none; margin-top: 20px; text-align: center;">
                <h5 id="recommendationText">Je veux pouvoir piloter et suivre précisément la consommation d'électricité liée à ma recharge (borne connectée)</h5>
                <div class="choices mt-3">
                    <button class="btn btn-primary choice-button" onclick="handleChoice('yes')">Oui, (recommandé)</button>
                    <button class="btn btn-secondary choice-button" onclick="handleChoice('no')">Non</button>
                </div>
            </div>

            <!-- Offer Text -->
            <div id="offerText" style="display: none; margin-top: 20px; text-align: center; color: #007bff; font-weight: bold;">
                + Forfaits sérénité dés 99,90 MAD/Mois
            </div>

            <!-- Final Step Box -->
            <div id="finalStepBox" style="display: none; margin-top: 20px; text-align: center;">
                <div class="final-box">
                    <span id="finalStepText"></span>
                </div>
            </div>

            <!-- Retour Button -->
            <div class="text-center mt-4">
                <button class="btn btn-outline-primary retour-btn" onclick="goBack()">Retour</button>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
