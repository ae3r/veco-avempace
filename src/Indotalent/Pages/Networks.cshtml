@page
@model Indotalent.Pages.NetworksModel

<!-- Add the viewport meta for mobile responsiveness -->
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

<!-- CSS references -->
<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/slick.css" />
<link rel="stylesheet" href="~/css/slick-theme.css" />
<link rel="stylesheet" href="~/css/style.css" />
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<style>
    .main-content {
        margin-top: 160px; /* offset below the fixed top navbar in your layout */
        padding: 20px;
    }

    .my-networks-container {
        background-color: #fff;
        border: 2px solid #0b7fab;
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .my-networks-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        border-radius: 6px;
        overflow: hidden;
    }

        .my-networks-table thead {
            background-color: #0b7fab;
        }

            .my-networks-table thead th {
                color: #fff;
                font-weight: 600;
                padding: 12px;
                border-bottom: 2px solid #0b7fab;
            }

        .my-networks-table tbody td {
            padding: 12px;
            border-bottom: 1px solid #eee;
        }

        .my-networks-table tbody tr:hover {
            background-color: #f0f8fa;
        }

    .primary-btn {
        background-color: #0b7fab;
        color: #fff;
        border: none;
        padding: 8px 16px;
        border-radius: 4px;
        cursor: pointer;
    }

        .primary-btn:hover {
            background-color: #095f79;
        }

    .top-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

        .top-bar .items-per-page select {
            border: 1px solid #ddd;
            padding: 5px 8px;
            border-radius: 4px;
        }

    .networks-heading {
        margin: 20px 0 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .pagination-container {
        margin-top: 15px;
        display: flex;
        gap: 10px;
    }

    .page-btn {
        background-color: #0b7fab;
        color: #fff;
        border: none;
        border-radius: 4px;
        padding: 5px 10px;
        cursor: pointer;
    }

        .page-btn:hover {
            background-color: #095f79;
        }
</style>

<body>
    <div class="main-content">
        <div class="top-bar">
            <div class="items-per-page">
                <label>Items per page</label>
                <select>
                    <option>5</option>
                    <option>10</option>
                    <option>25</option>
                    <option>50</option>
                </select>
            </div>
            <button class="primary-btn">Filter</button>
        </div>

        <div class="networks-heading">
            <h3>My Networks</h3>
            <form method="post">
                <button type="submit" class="primary-btn">Create Network</button>
            </form>
        </div>

        <div class="my-networks-container">
            <!-- 1) Wrap your table in .table-responsive for mobile-friendly scroll -->
            <div class="table-responsive">
                <table class="my-networks-table">
                    <thead>
                        <tr>
                            <th>Network Name</th>
                            <th>Address</th>
                            <th>Plant</th>
                            <th>Network Layout</th>
                            <th>N. Chargers</th>
                            <th>N. Users</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Networks != null && Model.Networks.Count > 0)
                        {
                            @foreach (var net in Model.Networks)
                            {
                                <tr onclick="location.href='@Url.Page("NetworkPanel", new { networkId = net.Id })';" style="cursor:pointer;">
                                    <td>@net.NetworkName</td>
                                    <td>@net.Address</td>
                                    <td>@net.Plant</td>
                                    <td>@net.NetworkLayout</td>
                                    <td>@net.NumberOfChargers</td>
                                    <td>@net.NumberOfUsers</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6">No networks found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="pagination-container">
                <button class="page-btn">Prev</button>
                <button class="page-btn">1</button>
                <button class="page-btn">Next</button>
            </div>
        </div>
    </div>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/landingpage/js/slick.min.js"></script>
</body>
</html>
