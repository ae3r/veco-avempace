<!-- /HEADER -->

<div class="section">
    <div class="container">
        <h2>Network list <i class="fa fa-info-circle"></i></h2>
        <p>Manage your networks and add new ones</p>

        <!-- "Add network" top-right button -->
        <div style="text-align:right; margin-bottom:10px;">
            <button class="btn btn-light" onclick="alert('Go to Add Network flow!');">
                Add network
            </button>
        </div>

        <div class="network-list-container">
            <!-- One card for the newly created network -->
            <div class="network-card" onclick="window.location.href='@Url.Page("NetworkDetails", new { networkName = Model.NetworkName })'">
                <div class="network-label">Network</div>
                <div class="network-name">@Model.NetworkName</div>

                <!-- Icons row -->
                <div class="icon-row">
                    <!-- Charger -->
                    <div class="icon-item">
                        <i class="fa fa-plug"></i>
                        <div class="icon-label">Chargers</div>
                        <div class="icon-value">0</div>
                    </div>
                    <!-- Users -->
                    <div class="icon-item">
                        <i class="fa fa-users"></i>
                        <div class="icon-label">Users</div>
                        <div class="icon-value">1</div>
                    </div>
                    <!-- Meter (use @Model.MeterPower) -->
                    <div class="icon-item" style="color: #0052cc;">
                        <i class="fa fa-bolt"></i>
                        <div class="icon-label">Meter</div>
                        <div class="icon-value">@Model.MeterPower kW</div>
                    </div>
                    <!-- PV = "No" for now -->
                    <div class="icon-item">
                        <i class="fa fa-solar-panel" style="opacity:0.3;"></i>
                        <div class="icon-label">PV</div>
                        <div class="icon-value">No</div>
                    </div>
                </div>
            </div>

            <!-- Another card for "Add network" -->
            <div class="add-network-card">
                <h5>Add network</h5>
                <p>Click the button + to add a new network</p>
                <button class="plus-btn" onclick="alert('Go to Add Network flow!');">
                    <i class="fa fa-plus"></i>
                </button>
            </div>
        </div>
    </div>
</div>

