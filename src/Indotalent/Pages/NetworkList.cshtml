<style>
    .network-list-container {
        max-width: 700px;
        margin: 40px auto;
    }

    .network-card {
        background-color: #f9f9f9;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        position: relative;
        cursor: pointer; /* entire card is clickable */
        transition: box-shadow 0.2s;
    }

        .network-card:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

    .network-label {
        color: #555;
        font-size: 0.9rem;
        margin-bottom: 4px;
    }

    .network-name {
        color: #000;
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .icon-row {
        display: flex;
        align-items: center;
        justify-content: space-around;
        margin-top: 10px;
    }

    .icon-item {
        text-align: center;
    }

        .icon-item i {
            font-size: 1.5rem;
            display: block;
            margin-bottom: 5px;
        }

    .icon-label {
        font-weight: 500;
        font-size: 0.85rem;
        color: #666;
    }

    .icon-value {
        font-weight: 600;
        font-size: 1rem;
    }

    .add-network-card {
        background-color: #f2f2f2;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
    }

        .add-network-card .plus-btn {
            border: none;
            background: none;
            font-size: 3rem;
            cursor: pointer;
        }

    .section {
        margin-top: 80px; /* Adjust as needed */
    }
</style>

