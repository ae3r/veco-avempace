@* No @page directive, just a partial *@

<style>
    .signup-choice-partial h3,
    .signup-choice-partial h4 {
        text-align: center;
    }

    .signup-choice-partial h4 {
        font-weight: bold;
        margin-bottom: 30px;
    }
</style>

<div class="signup-choice-partial">
    <h3>Before we get started</h3>
    <h4>How did you get your station and/or charge card?</h4>

    <div class="row mt-4">
        <!-- 1) Via Employer -->
        <div class="col-md-6 mb-3">
            <div class="card choice-card" onclick="alert('Via Employer chosen!')">
                <div class="card-body text-center">
                    <i class="fa fa-briefcase fa-2x mb-2"></i>
                    <h5 class="card-title">Via my employer</h5>
                    <p class="card-text">
                        My employer or car leasing company provided me with
                        a charging station and/or charge card, which I will
                        use to charge my business car.
                    </p>
                </div>
            </div>
        </div>

        <!-- 2) Private / Business Purchase -->
        <div class="col-md-6 mb-3">
            <div class="card choice-card" onclick="loadPrivatePurchasePartial()">
                <div class="card-body text-center">
                    <i class="fa fa-building fa-2x mb-2"></i>
                    <h5 class="card-title">Private or business purchase</h5>
                    <p class="card-text">
                        I want to charge my private car or offer charging
                        services to other EV drivers.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Optional close button -->
    <div class="mt-3 text-center">
        <button class="btn btn-secondary" onclick="$('#signUpChoiceContainer').slideUp()">
            Close
        </button>
    </div>
</div>

<script>
    // Called when user clicks "Private or business purchase" card
    function loadPrivatePurchasePartial() {
        $.get("@Url.Page("./Login", "PrivatePurchaseSignupPartial")", function(html) {
            // Insert partial into the same container
            $("#signUpChoiceContainer").html(html).slideDown("fast", function() {
                // Scroll to it
                $('html, body').animate({
                    scrollTop: $("#signUpChoiceContainer").offset().top
                }, 600);
            });
        });
    }
</script>
